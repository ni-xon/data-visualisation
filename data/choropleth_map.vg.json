{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Global distribution of Astronauts and their nationalilties before 2020",
    "color": "white",
    "anchor": "right",
    "orient": "top",
    "fontSize": 22
  },
  "width": 1000,
  "height": 600,
  "background": "black",
  "config": {
    "view": {
      "stroke": "transparent"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ni-xon/data-visualisation/master/data/world.topojson",
    "format": {
      "type": "topojson",
      "feature": "custom.geo"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ni-xon/data-visualisation/master/data-cleaning/nationalities.csv"
        },
        "key": "country",
        "fields": ["count"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "black"
  },
  "encoding": {
    "color": {
      "field": "count",
      "type": "quantitative",
      "scale": { "scheme": "darkred", "type": "symlog", "reverse": false },
      "title": "Number of Astronauts",
      "legend": {
        "labelColor": "white",
        "titleColor": "white",
        "titleFontSize": 16,
        "titlePadding": 10
      }
    },
    "tooltip": [
      { "field": "properties.name", "type": "nominal", "title": "Country" },
      {
        "field": "count",
        "type": "quantitative",
        "title": "Number Of Astronauts"
      }
    ]
  }
}
